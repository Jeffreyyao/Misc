<Window x:Class="Timer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" ResizeMode="NoResize"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Timer" SizeChanged="window_SizeChanged"
        mc:Ignorable="d" Name="window" Loaded="window_Loaded" WindowStyle="SingleBorderWindow"
        Height="450" Width="350">
    <Grid Name="grid1" Background="Gray">
        <Grid.RowDefinitions>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="15*"/>
        </Grid.RowDefinitions>
        <StackPanel Name="clockContainer" Orientation="Horizontal">
            <TextBlock Margin="20 0 0 0"  Name="clock" FontSize="100" Text="88:88" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <TextBlock Margin="0 50 0 0"  Name="sec" FontSize="30" Text="88" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </StackPanel>
        <Grid Name="btnContainer" Grid.Row="1">
            <Label  Background="DarkGreen"/>
        </Grid>
    </Grid>
</Window>
